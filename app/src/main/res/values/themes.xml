<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calander" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Calander.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Calander.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Calander.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.CustomDateDialogTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomDateDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/clear</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="mydialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="Myedittext" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="WheelStyleDemo">
        <item name="wheel_itemTextColor">@android:color/holo_green_dark</item>
        <item name="wheel_itemTextColorSelected">@android:color/holo_green_light</item>
        <item name="wheel_itemTextSize">20sp</item>
        <item name="wheel_itemTextSizeSelected">22sp</item>
        <item name="wheel_itemTextBoldSelected">true</item>
        <item name="wheel_sameWidthEnabled">false</item>
        <item name="wheel_atmosphericEnabled">true</item>
        <item name="wheel_curtainEnabled">false</item>
        <item name="wheel_curvedEnabled">false</item>
        <item name="wheel_curvedMaxAngle">60</item>
        <item name="wheel_cyclicEnabled">true</item>
        <item name="wheel_indicatorEnabled">true</item>
        <item name="wheel_indicatorColor">@android:color/holo_green_dark</item>
        <item name="wheel_indicatorSize">1dp</item>
    </style>

</resources>